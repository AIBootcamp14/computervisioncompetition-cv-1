{
  "paths": {
    "train_csv": "data/raw/train.csv",
    "test_csv": "data/raw/sample_submission.csv",
    "meta_csv": "data/raw/meta.csv",
    "train_root": "data/raw/train",
    "test_root": "data/raw/test",
    "processed_dir": "data/processed",
    "reports_dir": "docs",
    "exp_dir": "experiments/20250903",
    "logs_dir": "logs"
  },
  "loader": {
    "img_size": 224,
    "batch_size": 64,
    "num_workers": 4,
    "pin_memory": true,
    "prefetch_factor": 2,
    "persistent_workers": true
  },
  "augs": {
    "rotate_limit": 25,
    "jitter": 0.2,
    "use_clahe": true,
    "use_blur": true,
    "use_affine": true,
    "hflip_p": 0.2
  },
  "sampler": { "use_weighted": true, "clip_min": 0.5, "clip_max": 3.0 },
  "seed": 42,
  "strict_mode": true
}
